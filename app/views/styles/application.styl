menuZ = 99999
scrimZ = 99998
collectionZ = 99997

topPX = 20px

@import 'nib'

*
  box-sizing border-box

html
  text-rendering optimizeLegibility
  
body

  background: #fff url('/images/xmas.gif') repeat-x top left
  background-attachment: fixed
  font-family Arial, sans-serif
  font-size 13px
  line-height 14px
  font-weight bold

a
  text-decoration none
  color #000
  
a:visited
  color #000
  
a:hover
  color #39B54A

ul
  list-style-type none
  padding 0

  li
    font-size 14px
    letter-spacing 1px

h2 
  margin 0
  margin-top 4px
  line-height 16px

h3
  font-size 1.32em
  line-height 14px
  margin 0
  margin-top 4px

#left
  z-index 99999
  position fixed
  left 50px
  top topPX

#middle 
  z-index 99999
  text-align center
  position fixed
  width 100%
  top topPX
  pointer-events none

#right
  z-index 99999
  text-align right
  position fixed
  right 50px
  top topPX

#bleft
  z-index 99999
  position fixed
  left 50px
  bottom topPX

#bmiddle
  z-index 99998
  position fixed
  text-align center
  width 100%
  bottom topPX

#bright
  z-index 99999
  position fixed
  right 50px
  bottom topPX

#collection
  text-align center
  margin 60px
  z-index collectionZ
  
  .block
    display inline-block
    margin 20px
    position relative
    line-height 0
    vertical-align bottom

    .square
      display inline-block
      vertical-align center
      width 300px
      height 300px
      background-color #39B54A
      border: 10px solid #000
      outline: 10px solid #39B54A
      margin 4px
      text-align center
      line-height 14px

      a:hover
        color #000

      .tweet-container
        margin 0 auto
        display table
        height 100%

        .inner
          height 100%
          display table-cell
          vertical-align middle

      .tweet
        margin 10px 10px 10px
        font-size 15px
        line-height 17px

    a.sm2_link
      display block
      width 200px
      height 200px
      margin 40px auto 20px
      background transparent url('../images/playpause.png') 0px 0px no-repeat

    a.sm2_link.sm2_playing
      background transparent url('../images/playpause.png') -200px 0px no-repeat


    img
      vertical-align baseline
      cursor default

    .info
      position absolute
      cursor default
      display block
      background rgba(0,0,0,0.0)
      width 100%
      height 100%
      text-align left
      color #fff
      -webkit-transition-duration: 0.4s;
      transition-duration: 0.4s;

      p
        display none
        font-size 14px
        line-height 20px
        margin-left 10px
        
        strong
          font-weight bold
          
        em, a
          text-decoration underline

          
      p:first-child
        margin-top 10px
          

#scrim
  top 0
  width 100%
  height 100%
  display none
  background #fff
  z-index scrimZ
  position fixed

#scrim.loading
    display block
    //background #fff url('../images/loader.gif') center center no-repeat